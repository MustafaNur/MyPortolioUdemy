@model List<Message>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Mesajlar</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Gelen Mesaj Listesi</div>
                        </div>
                        <div class="card-body">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Gönderen</th>
                                        <th scope="col">Konu</th>
                                        <th scope="col">Tarih</th>
                                        <th scope="col">Mesajı Aç</th>
                                        <th scope="col">Durum</th>
                                        <th scope="col">Sil</th>
                                       
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.MessageID</td>
                                            <td>@item.MessageNameSurname</td>
                                            <td>@item.MessageSubject</td>
                                            <td>@item.MessageSendDate.ToLongDateString()</td>
                                            <td><a href="/Message/MessageDetail/@item.MessageID" class="btn btn-outline-info">Mesajı Aç</a></td>
                                            @if (item.MessageIsRead == true)
                                            {
                                                <td><a href="/Message/ChangeIsReadToFalse/@item.MessageID" class="btn btn-dark">Okunmadı olarak işaretle</a></td>
                                              
                                            }
                                            else
                                            {
                                                <td><a href="/Message/ChangeIsReadToTrue/@item.MessageID" class="btn btn-success">Okundu olarak işaretle</a></td>
                                                
                                            }

                                            <td><a href="/Message/DeleteMessage/@item.MessageID" class="btn btn-outline-danger">Sil</a></td>
                                            
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

