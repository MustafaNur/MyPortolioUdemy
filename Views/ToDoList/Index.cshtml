@model List<ToDoList>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Yapılacaklar Listesi</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        
                        <div class="card-body">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">İçerik</th>
                                        <th scope="col">Tarih</th>
                                        <th scope="col">Durum</th>
                                        <th scope="col">Sil</th>
                                        <th scope="col">Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Title</td>
                                            <td>@item.Date</td>
                                            @if (item.Status == true)
                                            {
                                                <td><a href="/ToDoList/ChangeToDoListStatusToFalse/@item.ToDoListID" class="btn btn-dark">Yapılmadı</a></td>

                                            }
                                            else
                                            {
                                                <td><a href="/ToDoList/ChangeToDoListStatusToTrue/@item.ToDoListID" class="btn btn-success">Yapıldı</a></td>

                                            }
                                            <td><a href="/ToDoList/DeleteToDoList/@item.ToDoListID" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/ToDoList/UpdateToDoList/@item.ToDoListID" class="btn btn-outline-info">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/ToDoList/CreatToDoList/" class="btn btn-outline-primary">Yeni yapılacak işlem</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


